@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <form asp-controller="Urls" asp-action="Shorten" method="post" class="url-form">
                <div class="input-group mb-3">
                    <input type="url" name="url" class="form-control form-control-lg" 
                           placeholder="Enter your URL here..." required>
                    <button class="btn btn-primary btn-lg" type="submit">Shorten URL</button>
                </div>
            </form>
        </div>
    </div>

    <div class="row justify-content-center mt-4">
        <div class="col-md-8">
            <h2>Recently Shortened URLs</h2>
            <div id="recentUrls" class="mt-3">
                @if (ViewBag.RecentUrls != null)
                {
                    foreach (var url in ViewBag.RecentUrls)
                    {
                        <div class="card mb-2">
                            <div class="card-body">
                                <p class="mb-1">Original: @url.OriginalUrl</p>
                                <p class="mb-0">Shortened: <a href="@url.ShortUrl">@url.ShortUrl</a></p>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</div>