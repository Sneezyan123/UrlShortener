<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - URL Shortener</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom mb-3">
            <div class="container">
                <div class="navbar-nav">
                    <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Home</a>
                    <a class="nav-link text-dark" asp-controller="Home" asp-action="About">About</a>
                </div>
                <div class="navbar-collapse justify-content-end">
                    @{
                        var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
                        var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
                        var isLoginPage = currentController == "User" && (currentAction == "Login" || currentAction == "Register");
                    }
                    @if (!isLoginPage)
                    {
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="btn btn-outline-primary me-2" asp-controller="User" asp-action="Login">Sign In</a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-primary" asp-controller="User" asp-action="Register">Sign Up</a>
                            </li>
                        </ul>
                    }
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>